<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sharedpreferences.rennanfelizardo.ufpb.br.preferenciabackground.MainActivity"
    android:background="#ffffff"
    android:id="@+id/layoutId">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/texto_titulo"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:id="@+id/radioGroupId"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_azul_cor"
            android:id="@+id/radioButton"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_verde_cor"
            android:id="@+id/verdeId"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_vermelho_cor"
            android:id="@+id/vermelhoId"
            android:checked="false" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_botao_mudar"
        android:id="@+id/botaoMudarId"
        android:layout_below="@+id/radioGroupId"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/radioGroupId"
        android:layout_alignStart="@+id/radioGroupId"
        android:layout_alignRight="@+id/radioGroupId"
        android:layout_alignEnd="@+id/radioGroupId" />
</RelativeLayout>
